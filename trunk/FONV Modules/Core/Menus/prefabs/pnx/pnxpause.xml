<!-- ######################################################################################## General -->
<_PNxCPButton> 1 </_PNxCPButton>


<!-- ######################################################################################## IO Control Panel Button -->
<_PNxCPButtonEnabled> 0 </_PNxCPButtonEnabled>
	
<_PNxCPButtonPressed>
	<copy src="PNxControlPanelBtn" trait="_Selected" />
</_PNxCPButtonPressed>


<!-- ######################################################################################## Control Panel Button -->
<hotrect name="PNxControlPanelBtn">
	<depth> 3 </depth>
	<visible>
		<copy src="main_container" trait="childcount" />
		<eq> 8 </eq>
		<and> <not src="main_back_button" trait="visible" /> </and>
		<and> <not src="confirm_container" trait="visible" /> </and>
		<and src="io()" trait="_PNxCPButtonEnabled" />
	</visible>
	
	<zoom> &scale; </zoom>
	<systemcolor> &mainmenu; </systemcolor>
	<brightness> <copy src="StartMenu" trait="brightness" /> </brightness>
	<clicksound> UIMenuOK </clicksound>
	<mouseoversound> UIMenuFocus </mouseoversound>

	<x>
		<copy src="main_container" trait="x" />
		<add src="main_container" trait="width" />
		<sub src="me()" trait="width" />
	<x>
	<y>
		<copy src="screen()" trait="height" />
		<sub src="me()" trait="height" />
		<sub> 10 </sub>
	</y>
	<width>
		<copy src="child(label)" trait="width" />
		<add src="child(icon)" trait="width" />
	</width>
	<height>
		<copy src="child(icon)" trait="height" />
	</height>
	
	<user0> &true; </user0>
	<target> &true; </target>
	
	<filename> pnx\hud\cp\cp_icon.dds </filename>
	
	<_Selected>
		<add src="me()" trait="clicked" />
		<max> 0 </max>
		<min> 1 </min>
	</_Selected>
	
	<text name="label">
		<font> 7 </font>
		<depth> 3 </depth>
		<justify> &left; </justify>
		<alpha> <copy src="sibling(icon)" trait="alpha" /> </alpha>

		<x>
			<copy src="parent()" trait="x" />
		</x>
		<y>
			<copy src="parent()" trait="y" />
			<add>
				<copy src="parent()" trait="height" />	
				<div> 2 </div>
			</add>
			<sub>
				<copy src="me()" trait="height" />	
				<div> 2 </div>
			</sub>
		</y>
		<systemcolor> &hudmain; </systemcolor>
		<string> Mod Panel </string>
	</text>
	
	<image name="icon">
		<zoom> &scale; </zoom>
		<alpha>
			<copy> 155 </copy>
			<add>
				<copy> 100 </copy>
				<onlyif src="parent()" trait="mouseover" />
			</add>
		</alpha>
		
		<x>
			<copy src="sibling(label)" trait="x" />
			<add src="sibling(label)" trait="width" />
		</x>
		<y>
			<copy src="parent()" trait="y" />
		</y>
	
		<width> 92 </width>
		<height> 92	</height>
		
		<filename> pnx\hud\cp\cp_icon.dds </filename>
	</image>
</hotrect>