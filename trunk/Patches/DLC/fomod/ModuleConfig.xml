<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>Project Nevada - DLC Support</moduleName>
	<moduleDependencies operator="And">
		<dependencies operator="Or">
			<fileDependency file="Project Nevada - Core.esm" state="Active"/>
			<fileDependency file="Project Nevada - Core.esm" state="Inactive"/>
		</dependencies>
		<dependencies operator="Or">
			<fileDependency file="DeadMoney.esm" state="Active"/>
			<fileDependency file="DeadMoney.esm" state="Inactive"/>
			<fileDependency file="HonestHearts.esm" state="Active"/>
			<fileDependency file="HonestHearts.esm" state="Inactive"/>
			<fileDependency file="OldWorldBlues.esm" state="Active"/>
			<fileDependency file="OldWorldBlues.esm" state="Inactive"/>
		</dependencies>
	</moduleDependencies>
	<requiredInstallFiles>
		<folder source="textures"/>
		<folder source="meshes"/>
	</requiredInstallFiles>
	<conditionalFileInstalls>
		<patterns>
			<pattern>
				<dependencies operator="Or">
					<fileDependency file="DeadMoney.esm" state="Active"/>
					<fileDependency file="DeadMoney.esm" state="Inactive"/>
				</dependencies>
				<files>
					<file source="Project Nevada - Dead Money.esp" priority="1"/>
				</files>
			</pattern>
			<pattern>
				<dependencies operator="Or">
					<fileDependency file="HonestHearts.esm" state="Active"/>
					<fileDependency file="HonestHearts.esm" state="Inactive"/>
				</dependencies>
				<files>
					<file source="Project Nevada - Honest Hearts.esp" priority="2"/>
				</files>
			</pattern>
			<pattern>
				<dependencies operator="And">
					<dependencies operator="Or">
						<fileDependency file="OldWorldBlues.esm" state="Active"/>
						<fileDependency file="OldWorldBlues.esm" state="Inactive"/>
					</dependencies>
					<fileDependency file="Project Nevada - Cyberware.esp" state="Active"/>
				</dependencies>
				<files>
					<file source="Project Nevada - Old World Blues.esp" priority="3"/>
				</files>
			</pattern>
			<pattern>
				<dependencies operator="And">
					<dependencies operator="Or">
						<fileDependency file="OldWorldBlues.esm" state="Active"/>
						<fileDependency file="OldWorldBlues.esm" state="Inactive"/>
					</dependencies>
					<fileDependency file="Project Nevada - Cyberware.esp" state="Inactive"/>
				</dependencies>
				<files>
					<file source="Project Nevada - Old World Blues (No Cyberware).esp" priority="4"/>
				</files>
			</pattern>
		</patterns>
	</conditionalFileInstalls>
</config>